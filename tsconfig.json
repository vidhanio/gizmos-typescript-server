{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["src/**/*", "index.ts", "server", "db", "types.ts", "index.d.ts"],
  "exclude": ["src/types/*.ts", "node_modules"]
}
